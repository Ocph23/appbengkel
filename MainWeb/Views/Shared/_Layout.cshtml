<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bengkel A</title>

    @Styles.Render("~/Content/css")
    <link href="~/Content/style5.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/angular/angular.js"></script>
    <script src="~/Scripts/angular/angular-route.js"></script>

</head>
<body>
    <div class="wrapper" id="wr">
        <!-- Sidebar Holder -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Bengkel Melati</h3>
            </div>
            <ul class="list-unstyled components">
                @Html.Partial("_LoginPartial")
                <li class="active">
                    <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Home</a>
                    <ul class="collapse list-unstyled" id="homeSubmenu">
                        <li>
                            <a href="/Home">Home</a>
                        </li>
                        <li>
                            <a href="/Home/About">About</a>
                        </li>
                        <li>
                            <a href="/Home/Contact">Contact</a>
                        </li>
                    </ul>
                </li>

                <li>
                    <a href="/Pelanggan">Pelanggan</a>
                </li>
                <li>
                    <a href="#barangSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Barang</a>
                    <ul class="collapse list-unstyled" id="barangSubmenu">
                        <li>
                            <a href="/Barang">Data Barang</a>
                        </li>
                        <li>
                            <a href="/Kategori">Kategori</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="/Supplier">Supplier</a>
                </li>
                <li>
                    <a href="/Montir">Data Montir</a>
                </li>
                <li>
                    <a href="#transaksi" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Transaksi</a>
                    <ul class="collapse list-unstyled" id="transaksi">
                        <li>
                            <a href="/Pembelian">Pembelian</a>
                        </li>
                        <li>
                            <a href="/Penjualan">Penjualan</a>
                        </li>
                    </ul>
                </li>

            </ul>
            <ul class="list-unstyled CTAs">
                <li>
                    <footer>
                        <p>&copy; @DateTime.Now.Year - Error10</p>
                    </footer>
                </li>
            </ul>
        </nav>

        <!-- Page Content Holder -->
        <div id="content">
            <nav class="mb-1 navbar navbar-expand-lg navbar-dark default-color">
                <button type="button" id="sidebarCollapse" class="navbar-btn">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>

            </nav>
            <div class="card" style="margin:10px">
                <div class="card-body">
                    @RenderBody()
                </div>

            </div>

        </div>
    </div>

    <!-- jQuery CDN - Slim version (=without AJAX) -->



    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/bootstrap")
   
    @RenderSection("scripts", required: false)



    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $(this).toggleClass('active');
            });
        });
    </script>
</body>
</html>
